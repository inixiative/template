{
  "name": "template",
  "private": true,
  "type": "module",
  "workspaces": ["packages/*", "apps/*"],
  "scripts": {
    "setup": "./scripts/setup/setup.sh",
    "setup:doppler": "bun ./scripts/setup/doppler-setup.ts",
    "sync-env": "./scripts/setup/sync-env.sh",
    "with": "./scripts/deployment/with-env.sh",
    "local": "bun run with local api concurrently --raw -n 'api,web,worker,db' 'bun local:api' 'bun local:web' 'bun local:worker' 'bun local:db'",
    "local:api": "bun run with local api bun --cwd apps/api dev",
    "local:web": "bun run with local web bun --cwd apps/web dev",
    "local:worker": "bun run with local api bun --cwd apps/api dev:worker",
    "local:admin": "bun run with local admin bun --cwd apps/admin dev",
    "local:superadmin": "bun run with local superadmin bun --cwd apps/superadmin dev",
    "local:db": "docker-compose up -d --wait",
    "start:api": "bun --cwd apps/api start",
    "start:web": "bun --cwd apps/web preview",
    "start:db": "docker-compose up -d --wait",
    "stop:db": "docker-compose down",
    "reset:db": "docker-compose down && docker-compose up -d --wait && bun run db:push && bun run db:seed",
    "dev": "bun run --filter=api dev",
    "build": "bun run '--filter=*' build",
    "test": "bun run '--filter=*' test",
    "db:generate": "bun run --filter=@template/db db:generate",
    "db:push": "bun run --filter=@template/db db:push",
    "db:migrate": "bun run --filter=@template/db db:migrate",
    "db:deploy": "bun run --filter=@template/db db:deploy",
    "db:studio": "bun run --filter=@template/db db:studio",
    "db:seed": "bun run --filter=@template/db db:seed",
    "db:dump": "./scripts/db/dump.sh",
    "db:restore": "./scripts/db/restore.sh",
    "db:clone": "./scripts/db/clone.sh",
    "deploy": "./scripts/deployment/deploy.sh",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "concurrently": "^9.2.0",
    "typescript": "^5.7.0"
  },
  "overrides": {}
}
