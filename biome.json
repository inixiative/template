{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off",
        "useArrowFunction": "error"
      },
      "style": {
        "noNonNullAssertion": "off",
        "noDefaultExport": "error",
        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "filenameCases": ["camelCase", "PascalCase"],
            "requireAscii": true,
            "strictCase": true
          }
        }
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always"
    }
  },
  "files": {
    "includes": ["**", "!**/node_modules", "!**/dist", "!**/_old", "!**/.next", "!**/*.gen.ts", "!**/generated", "!tmp"]
  },
  "overrides": [
    {
      "includes": ["apps/**/app/**", "apps/api/src/**"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "error",
              "options": {
                "patterns": [
                  {
                    "group": ["./**", "../**"],
                    "message": "Relative imports are not allowed. Use #/ for app-local imports or @template/* for package imports."
                  },
                  {
                    "group": ["##/**", "~/**"],
                    "message": "Apps should use #/ for local imports and @template/* for package imports."
                  }
                ]
              }
            }
          }
        }
      }
    },
    {
      "includes": ["packages/**/src/**"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "error",
              "options": {
                "patterns": [
                  {
                    "group": ["./**", "../**"],
                    "message": "Relative imports are not allowed in packages. Use @template/<pkg>/* imports."
                  },
                  {
                    "group": ["#/**", "##/**", "~/**"],
                    "message": "Packages should use @template/<pkg>/* imports for absolute references."
                  }
                ]
              }
            }
          }
        }
      }
    },
    {
      "includes": ["apps/**/app/**/index.ts", "apps/**/app/**/index.tsx", "apps/api/src/**/index.ts", "packages/**/src/**/index.ts", "packages/**/src/**/index.tsx"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": "off"
          }
        }
      }
    },
    {
      "includes": ["apps/**/app/routes/**", "**/app/routes/**"],
      "linter": {
        "rules": {
          "style": {
            "useFilenamingConvention": "off"
          }
        }
      }
    },
    {
      "includes": ["**/*.d.ts"],
      "linter": {
        "rules": {
          "style": {},
          "complexity": {
            "useArrowFunction": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/vite.config.ts",
        "**/postcss.config.mjs",
        "**/app.config.ts",
        "**/prisma.config.ts",
        "**/openapiTs.config.ts",
        "**/apps/**/app/ssr.tsx"
      ],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    }
  ]
}
