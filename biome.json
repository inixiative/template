{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off",
        "useArrowFunction": "error"
      },
      "style": {
        "noNonNullAssertion": "off",
        "noDefaultExport": "error",
        "useExplicitFunctionReturnType": "off",
        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "filenameCases": ["camelCase", "PascalCase"],
            "requireAscii": true,
            "strictCase": true
          }
        }
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always"
    }
  },
  "files": {
    "includes": ["**", "!**/node_modules", "!**/dist", "!**/_old", "!**/.next", "!**/*.gen.ts", "!**/generated", "!tmp"]
  },
  "overrides": [
    {
      "includes": ["apps/**/app/routes/**", "**/app/routes/**"],
      "linter": {
        "rules": {
          "style": {
            "useFilenamingConvention": "off"
          }
        }
      }
    },
    {
      "includes": ["**/*.d.ts"],
      "linter": {
        "rules": {
          "style": {},
          "complexity": {
            "useArrowFunction": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/vite.config.ts",
        "**/postcss.config.mjs",
        "**/app.config.ts",
        "**/prisma.config.ts",
        "**/openapiTs.config.ts",
        "**/apps/**/app/ssr.tsx"
      ],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    }
  ]
}
