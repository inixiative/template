# ========================================
# Root Environment Configuration
# ========================================
# Shared vars that apply to multiple apps.
# Each app also has its own .env.local.example.
# ========================================

NODE_ENV=development
ENVIRONMENT=local

# URLs (used by API)
API_URL=http://localhost:8000
WEB_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001
SUPERADMIN_URL=http://localhost:3002

# Frontend URLs (NEXT_PUBLIC_ prefix for client-side access)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WEB_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_URL=http://localhost:3001
NEXT_PUBLIC_SUPERADMIN_URL=http://localhost:3002
