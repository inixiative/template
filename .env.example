# Database (matches docker-compose.yml)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/template

# Redis (for BullMQ jobs)
REDIS_URL=redis://localhost:6379

# Server
PORT=3000
NODE_ENV=development
ENVIRONMENT=local

# Auth
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:5173

# Sentry (optional)
SENTRY_DSN=

# AWS S3 (optional - for document storage)
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=
CLOUDFRONT_URL=  # CDN URL for uploaded files (e.g., https://d123.cloudfront.net)

# Stripe (optional - for fiat payments)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# OpenTelemetry / BetterStack (optional)
# These are read automatically by the OpenTelemetry SDK
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_EXPORTER_OTLP_HEADERS=
OTEL_SERVICE_NAME=template-api
