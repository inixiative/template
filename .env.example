# ========================================
# Template Environment Configuration
# ========================================
# Copy this file to .env.local for local development:
#   cp .env.example .env.local
#
# For production, use environment-specific secrets management.
# ========================================

# ─────────────────────────────────────────
# REQUIRED - Core Configuration
# ─────────────────────────────────────────

# Database (matches docker-compose.yml for local dev)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/template

# Redis (for BullMQ background jobs)
REDIS_URL=redis://localhost:6379

# Server
PORT=8000
NODE_ENV=development
ENVIRONMENT=local
API_URL=http://localhost:8000

# Auth (BetterAuth) - CHANGE THIS IN PRODUCTION!
# Must be at least 32 characters. Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=local-dev-secret-32-chars-min!!

# CORS - Frontend URL
CORS_ORIGIN=http://localhost:3000

# ─────────────────────────────────────────
# OPTIONAL - External Services
# ─────────────────────────────────────────
# Leave empty to disable. Only configure what you need.

# Error Tracking (Sentry)
SENTRY_DSN=

# File Storage (AWS S3 + CloudFront)
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=
CLOUDFRONT_URL=

# Payments (Stripe)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Observability (OpenTelemetry)
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_EXPORTER_OTLP_HEADERS=
OTEL_SERVICE_NAME=template-api
