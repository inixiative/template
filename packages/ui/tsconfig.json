{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["bun-types"],
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@template/db/*": ["../db/src/*"],
      "@template/permissions/*": ["../permissions/src/*"],
      "@template/shared/*": ["../shared/src/*"],
      "@template/ui/test": ["./src/test/index.ts"],
      "@template/ui/test/*": ["./src/test/*"],
      "@template/ui/openapi.json": ["./openapi.json"],
      "@template/ui/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
