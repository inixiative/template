{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["dom", "ES2015"],
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@template/db/*": ["../db/src/*"],
      "@template/permissions/*": ["../permissions/src/*"],
      "@template/shared/*": ["../shared/src/*"],
      "@template/ui/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
