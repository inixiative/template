{
  "name": "@template/shared",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "generate:api": "openapi-ts && cp ../../apps/api/openapi.json ./openapi.json && bun run generate:msw && echo $(date) > .sdk-generated",
    "generate:msw": "bun scripts/generateMswHandlers.ts",
    "generate:api:watch": "bun watch-and-generate.ts",
    "generate:api:with-wait": "bash ../../scripts/wait-for-api.sh && bun run generate:api"
  },
  "exports": {
    ".": "./src/index.ts",
    "./utils": "./src/utils/index.ts",
    "./components": "./src/components/index.ts",
    "./lib": "./src/lib/index.ts",
    "./hooks": "./src/hooks/index.ts",
    "./logger": "./src/logger/index.ts",
    "./store/*": "./src/store/*",
    "./apiClient": "./src/apiClient/index.ts",
    "./apiClient/*": "./src/apiClient/*"
  },
  "dependencies": {
    "@hey-api/client-fetch": "^0.13.1",
    "better-auth": "^1.4.18",
    "clsx": "^2.1.1",
    "consola": "^3.4.0",
    "lodash-es": "^4.17.21",
    "tailwind-merge": "^2.5.5",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@hey-api/openapi-ts": "^0.86.1",
    "@tanstack/react-query": "^5.90.5",
    "@types/lodash-es": "^4.17.12",
    "msw": "^2.12.8",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "@tanstack/react-query": "^5.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
