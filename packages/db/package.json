{
  "name": "@template/db",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./test": "./src/test/index.ts",
    "./zod": "./src/generated/zod/schemas/index.ts",
    "./zod/models": "./src/generated/zod/schemas/variants/pure/index.ts",
    "./zod/*": "./src/generated/zod/schemas/*.ts"
  },
  "scripts": {
    "test": "bun test src/test/",
    "db:generate": "prisma generate && bun run scripts/generateScalarSchemas.ts && echo $(date) > .prisma-generated",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "bun run prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@template/shared": "workspace:*",
    "lodash-es": "^4.17.23",
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@types/lodash-es": "^4.17.12",
    "@types/pg": "^8.11.0",
    "prisma": "^7.2.0",
    "prisma-zod-generator": "^2.0.0",
    "zod": "^3.24.0"
  }
}
