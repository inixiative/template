{
  "name": "@template/db",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./generated/client/client": "./src/generated/client/client.ts",
    "./generated/client/models": "./src/generated/client/models.ts",
    "./generated/client/enums": "./src/generated/client/enums.ts",
    "./lib/encryption/*": "./src/lib/encryption/*",
    "./test": "./src/test/index.ts",
    "./test/*": "./src/test/*",
    "./zod": "./src/generated/zod/schemas/index.ts",
    "./zod/models": "./src/generated/zod/schemas/variants/pure/index.ts",
    "./zod/*": "./src/generated/zod/schemas/*.ts"
  },
  "scripts": {
    "test": "bun run --cwd ../.. with test api bun test --concurrency=1 src/test/",
    "db:generate": "prisma generate && bun run scripts/generateScalarSchemas.ts && echo $(date) > .prisma-generated",
    "db:push": "prisma db push",
    "db:push:force": "[ \"$ENV\" = 'test' ] || [ \"$ENV\" = 'local' ] && prisma db push --accept-data-loss || echo 'ERROR: db:push:force only allowed in test/local env'",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "NODE_ENV=development bun run prisma/seed.ts",
    "db:truncate:webhooks": "bun run prisma/truncateWebhookSubscriptions.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@supercharge/promise-pool": "^3.2.0",
    "@template/shared": "workspace:*",
    "bcryptjs": "^3.0.3",
    "ioredis": "^5.6.1",
    "ioredis-mock": "^8.9.0",
    "lodash-es": "^4.17.23",
    "pg": "^8.18.0",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.3.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/lodash-es": "^4.17.12",
    "@types/pg": "^8.11.0",
    "@types/uuid": "^10.0.0",
    "prisma": "^7.2.0",
    "prisma-zod-generator": "^2.0.0",
    "zod": "^3.24.0"
  }
}
