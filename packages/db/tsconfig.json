{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "..",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@template/db/*": ["./src/*"],
      "@template/db/test": ["./src/test/index.ts"],
      "@template/db/test/*": ["./src/test/*"],
      "@template/permissions/*": ["../permissions/src/*"],
      "@template/shared/*": ["../shared/src/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*", "test/**/*", "prisma/**/*"],
  "exclude": ["node_modules", "dist"]
}
