// ============================================================================
// VERIFICATION (BetterAuth - email verification tokens)
// ============================================================================

model Verification {
  id         String   @id @default(dbgenerated("uuidv7()")) @db.VarChar(36)
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
}
