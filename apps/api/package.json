{
  "name": "api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "../../scripts/watch/api.sh",
    "dev:worker": "../../scripts/watch/worker.sh",
